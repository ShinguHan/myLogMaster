{
    "Smart Factory - Full Process Cycle": {
        "enabled": true,
        "description": "유리 기판(Glass)이 로봇에 의해 Pick Up 된 후, 레시피 파라미터 설정, 비전 검사, 최종 Place Down까지의 전체 공정 흐름을 검증합니다. (복합 조건 총망라)",
        "key_columns": [
            "TrackingID"
        ],
        "trigger_event": {
            "logic": "AND",
            "rules": [
                {
                    "column": "MessageName",
                    "operator": "equals",
                    "value": "PICK_UP_START"
                },
                {
                    "column": "DeviceID",
                    "operator": "starts with",
                    "value": "ROBOT"
                }
            ]
        },
        "steps": [
            {
                "name": "Step 1: Set Recipe Parameters (Unordered)",
                "max_delay_seconds": 15,
                "unordered_group": [
                    {
                        "name": "Set Thickness",
                        "event_match": {
                            "logic": "AND",
                            "rules": [
                                {
                                    "column": "MessageName",
                                    "operator": "equals",
                                    "value": "RP_SET"
                                },
                                {
                                    "column": "AsciiData",
                                    "operator": "contains",
                                    "value": "Thickness"
                                }
                            ]
                        }
                    },
                    {
                        "name": "Set LotID",
                        "event_match": {
                            "logic": "AND",
                            "rules": [
                                {
                                    "column": "MessageName",
                                    "operator": "equals",
                                    "value": "RP_SET"
                                },
                                {
                                    "column": "AsciiData",
                                    "operator": "contains",
                                    "value": "LotID"
                                }
                            ]
                        }
                    }
                ]
            },
            {
                "name": "Step 2: Optional Pre-Inspection Cleaning",
                "optional": true,
                "max_delay_seconds": 10,
                "event_match": {
                    "column": "MessageName",
                    "operator": "equals",
                    "value": "CLEANING_START"
                }
            },
            {
                "name": "Step 3: Vision Inspection",
                "event_match": {
                    "column": "DeviceID",
                    "operator": "equals",
                    "value": "VISION_01"
                }
            },
            {
                "name": "Step 4: Place Down Complete",
                "event_match": {
                    "logic": "OR",
                    "rules": [
                        {
                            "column": "MessageName",
                            "operator": "equals",
                            "value": "PLACE_DOWN_END"
                        },
                        {
                            "column": "MessageName",
                            "operator": "equals",
                            "value": "PROCESS_CANCELED"
                        }
                    ]
                }
            }
        ]
    }
}